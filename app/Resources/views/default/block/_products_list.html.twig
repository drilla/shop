{# @var \AppBundle\Entity\Product product #}

{% for product in specialOffers  %}

    <div class="card cursor-pointer"
         data-modal-href=""
            {#data-modal-href="<?= \yii\helpers\Url::toRoute(['honey/offer-family-bonuses', 'id' => $family->id]) ?>"#}
         data-toggle="modal"
         data-target="#modalPoints"
         data-container-selector="#modalPointsBody"
    >
        <div class="card__img">
            <img class="b-lazy" src="data:image/gif;base64,R0lGODlhAQABAIAAAAUEBAAAACwAAAAAAQABAAACAkQBADs="
                 data-src="{{ url('product_image', {'product_id':product.id, 'file_name' : product.faceImage.fileName}) }}"
                alt=""/>
        </div>
        <div class="card__header">
            <span class="card__link">{{ product.name }}</span>
        </div>
        <div class="card__body">
            <div class="lead">{{ product.price | number_format(thousand_sep=' ') ~ ' Руб' }}</div>
        </div>
    </div>
{% endfor %}